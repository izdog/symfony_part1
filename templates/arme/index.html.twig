{% extends 'base.html.twig' %}

{% block title %}RPG - Liste des armes{% endblock %}

{% block superTitre %}Liste des armes{% endblock %}

{% block body %}
   <div class="container">
        {% for arme in armes %}
            <div class="row mb-4">
                <div class="col-2">
                    <img class="w-100" src="{{ asset('assets/images/armes/' ~ arme.nom|replace({'é' :'e'}) ~ '.png') }}" alt="">
                </div>
                <div class="col">
                    <h4>Les informations de <a href="{{ path('display_arme', {'nom' : arme.nom|replace({'é': 'e'})}) }}">{{ arme.nom|capitalize }}</a></h4>
                    <div>Description : {{ arme.description }}</div>
                    <div>Dégats : {{ arme.degats }}</div>
                </div>
            </div>
        {% endfor %}
   </div>
{% endblock %}
